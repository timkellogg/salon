<h2><%= @stylist.fname %>, <%= @stylist.lname %></h2>

<% if @stylist.clients.any? %>
<ul>
	<% @stylist.clients.each do |client| %>
		<li><%= client.fname %></li>
	<% end %>
</ul>
<% end %>

<div class="row text-center">
<a class="button" href="/stylists">View all stylists</a>
<a class="button info" href="/stylist/<%= @stylist.id %>/edit">Edit</a>
<a class="button warning" href="/stylists/<%= @stylist.id %>">Destroy</a>
</div>
